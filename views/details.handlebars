<div class="container my-5 w-25">
  <div class="border rounded border-success p-3 mb-3">
    <a class="mb-3" style="text-decoration:none" href="/">
      Return home
    </a>
    <h1 class="mt-3 text-success">ID: {{data.id}}</h1>
    <div class="row mb-2">
      <div class="col-2">Name:</div>
      <div class="col-10">{{data.name}}</div>
    </div>
    <div class="row mb-2">
      <div class="col-2">Email:</div>
      <div class="col-10">{{data.email}}</div>
    </div>
    <div class="row mb-2">
      <div class="col-2">Gender:</div>
      <div class="col-10">{{data.gender}}</div>
    </div>
    <div class="row mb-3">
      <div class="col-2">Status:</div>
      <div class="col-10">{{data.status}}</div>
    </div>
  </div>
  {{#if msg}}
    <div class="alert alert-success" role="alert">
      {{msg}}
    </div>
  {{/if}}
</div>