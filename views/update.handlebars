<div class="container p-3 my-5">
    <form action="/update/{{data.id}}" class="w-50 mx-auto card p-4" method="POST">
        <a class="mb-3" style="text-decoration:none" href="/">
            Return home
        </a>
        <h1 class="text-success mb-3">Update A User</h1>
        <div class="mb-3">
            <label for="name" class="form-label">Enter your name</label>
            <input type="text" class="form-control" id="name" name="name" value="{{data.name}}">
        </div>
        <div class="mb-3">
            <label for="email" class="form-label">Email address</label>
            <input type="text" class="form-control" id="email" name="email" value="{{data.email}}">
        </div>
        <div class="row">
            <div class="mb-3 col-6">
                <p>Gender</p>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="gender" id="r1" value="male" {{checkMale data.gender}}>
                    <label class="form-check-label" for="r1">
                        Male
                    </label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="gender" id="r2" value="female" {{checkFemale data.gender}}>
                    <label class="form-check-label" for="r2">
                        Female
                    </label>
                </div>
            </div>
            <div class="mb-3 col-6">
                <p>Status</p>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="status" id="s1" value="active" {{checkActive data.status}}>
                    <label class="form-check-label" for="s1">
                        Active
                    </label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="status" id="s2" value="inactive" {{checkInActive data.status}}>
                    <label class="form-check-label" for="s2">
                        Inactive
                    </label>
                </div>
            </div>
        </div>
        <div class="d-flex justify-content-left"><button class="btn btn-success">Submit</button></div>
    </form>
</div>